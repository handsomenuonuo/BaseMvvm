<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义标题栏 -->
    <declare-styleable name="my_TitleBar">
        <!--标题栏文字描述-->
        <attr name="tb_title" format="string" />
        <!--标题栏文字大小-->
        <attr name="tb_titleSize" format="dimension" />
        <!--标题栏文字颜色-->
        <attr name="tb_titleColor" format="color|reference" />
        <!--标题栏文字是否加粗-->
        <attr name="tb_titleBold" format="boolean" />
        <!--左侧Padding-->
        <attr name="tb_leftPadding" format="dimension" />
        <!--左侧ICON-->
        <attr name="tb_leftIcon" format="reference" />
        <!--左侧ICON高度-->
        <attr name="tb_leftIconHight" format="dimension" />
        <!--是否显示左侧ICON-->
        <attr name="tb_showLeftIcon" format="boolean" />
        <!--左侧文字描述-->
        <attr name="tb_leftText" format="string" />
        <!--左侧文字大小-->
        <attr name="tb_leftTextSize" format="dimension" />
        <!--左侧文字颜色-->
        <attr name="tb_leftTextColor" format="color|reference" />
        <!--左侧ICON距离文字的间距-->
        <attr name="tb_leftTextLeftMargin" format="dimension" />
        <!--是否显示左侧文字-->
        <attr name="tb_showLeftText" format="boolean" />
        <!--是否显示左侧功能区域-->
        <attr name="tb_showLeftFunc" format="boolean" />
        <!--右侧Padding-->
        <attr name="tb_rightPadding" format="dimension" />
        <!--右侧ICON-->
        <attr name="tb_rightIcon" format="reference" />
        <!--右侧ICON高度-->
        <attr name="tb_rightIconHight" format="dimension" />
        <!--是否显示右侧ICON-->
        <attr name="tb_showRightIcon" format="boolean" />
        <!--右侧文字描述-->
        <attr name="tb_rightText" format="string" />
        <!--右侧文字大小-->
        <attr name="tb_rightTextSize" format="dimension" />
        <!--右侧文字颜色-->
        <attr name="tb_rightTextColor" format="color|reference" />
        <!--右侧ICON距离文字的间距-->
        <attr name="tb_rightTextLeftMargin" format="dimension" />
        <!--是否显示右侧文字-->
        <attr name="tb_showRightText" format="boolean" />
        <!--是否显示右侧功能区域-->
        <attr name="tb_showRightFunc" format="boolean" />
        <!--底部分割线的高度-->
        <attr name="tb_dividerHeight" format="dimension" />
        <!--底部分割线的颜色-->
        <attr name="tb_dividerColor" format="color|reference" />
        <!--是否显示底部分割线-->
        <attr name="tb_showDivider" format="boolean" />
        <!--标题栏高度，不包含分割线和状态栏高度-->
        <attr name="tb_barHeight" format="dimension" />
        <!--是否添加状态栏的高度-->
        <attr name="tb_addStatusBarHeight" format="boolean" />
    </declare-styleable>

    <!-- 自定义进度格控件 -->
    <declare-styleable name="my_ProgressCellView">
        <attr name="pc_totalCount" format="integer" />
        <attr name="pc_accentCount" format="integer" />
        <attr name="pc_primaryColor" format="color|reference" />
        <attr name="pc_accentColor" format="color|reference" />
        <attr name="pc_cellWidth" format="dimension" />
        <attr name="pc_cellSpace" format="dimension" />
        <attr name="pc_reverse" format="boolean" />
        <attr name="pc_oritenation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <!-- 带阴影的Layout -->
    <declare-styleable name="my_ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
        <attr name="sl_shadowSide">
            <flag name="all" value="0x1111"/>
            <flag name="left" value="0x0001"/>
            <flag name="top" value="0x0010"/>
            <flag name="right" value="0x0100"/>
            <flag name="bottom" value="0x1000"/>
        </attr>
    </declare-styleable>

    <!-- 曲线图 -->
    <declare-styleable name="my_CurveChart">
        <!--X轴的宽-->
        <attr name="cc_xAxisWidth" format="dimension" />
        <!--X轴的颜色-->
        <attr name="cc_xAxisColor" format="color|reference" />
        <!--X轴的文字大小-->
        <attr name="cc_xAxisTextSize" format="dimension" />
        <!--X轴的文字颜色-->
        <attr name="cc_xAxisTextColor" format="color|reference" />
        <!--X轴的整行刻度文字距离X轴尾端的右间距-->
        <attr name="cc_xAxisTextRowRightMargin" format="dimension" />
        <!--X轴的整行刻度文字距离原点的左间距-->
        <attr name="cc_xAxisTextRowLeftMargin" format="dimension" />
        <!--X轴的整行刻度文字距离原点的上间距-->
        <attr name="cc_xAxisTextRowTopMargin" format="dimension" />
        <!--Y轴的宽-->
        <attr name="cc_yAxisWidth" format="dimension" />
        <!--Y轴的颜色-->
        <attr name="cc_yAxisColor" format="color|reference" />
        <!--Y轴的文字大小-->
        <attr name="cc_yAxisTextSize" format="dimension" />
        <!--Y轴的文字颜色-->
        <attr name="cc_yAxisTextColor" format="color|reference" />
        <!--Y轴的整列刻度文字距离Y轴顶点的上间距-->
        <attr name="cc_yAxisTextColTopMargin" format="dimension" />
        <!--Y轴的整列刻度文字距离原点的右间距-->
        <attr name="cc_yAxisTextColRightMargin" format="dimension" />
        <!--是否显示Y轴线-->
        <attr name="cc_showYLine" format="boolean" />
        <!--X轴刻度线的宽-->
        <attr name="cc_xMarkLineWidth" format="dimension" />
        <!--X轴刻度线的颜色-->
        <attr name="cc_xMarkLineColor" format="color|reference" />
        <!--Y轴刻度线的宽-->
        <attr name="cc_yMarkLineWidth" format="dimension" />
        <!--Y轴刻度线的颜色-->
        <attr name="cc_yMarkLineColor" format="color|reference" />
        <!--是否显示X轴刻度线-->
        <attr name="cc_showXMarkLine" format="boolean" />
        <!--是否显示Y轴刻度线-->
        <attr name="cc_showYMarkLine" format="boolean" />
        <!--曲线的粗细-->
        <attr name="cc_curveWidth" format="dimension" />
        <!--曲线的颜色-->
        <attr name="cc_curveColor" format="color|reference" />
    </declare-styleable>


</resources>